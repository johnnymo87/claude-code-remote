{
  "name": "claude-code-remote",
  "version": "1.0.0",
  "description": "Claude Code Smart Notification System - Send desktop notifications when Claude completes tasks or needs input",
  "main": "hook-notify.js",
  "scripts": {
    "setup": "node setup.js",
    "telegram": "node start-telegram-webhook.js",
    "webhooks": "node start-all-webhooks.js",
    "webhooks:log": "mkdir -p ~/.local/state/claude-code-remote && node start-all-webhooks.js 2>&1 | tee ~/.local/state/claude-code-remote/daemon.log",
    "test": "jest"
  },
  "keywords": [
    "claude-code",
    "notification",
    "desktop-notification",
    "hooks",
    "productivity",
    "development-tools",
    "task-management",
    "claude",
    "ai-assistant"
  ],
  "author": "Claude-Code-Remote Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Claude-Code-Remote/Claude-Code-Remote.git"
  },
  "bugs": {
    "url": "https://github.com/Claude-Code-Remote/Claude-Code-Remote/issues"
  },
  "homepage": "https://github.com/Claude-Code-Remote/Claude-Code-Remote#readme",
  "dependencies": {
    "async-mutex": "^0.5.0",
    "axios": "^1.6.0",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^17.2.1",
    "execa": "^9.6.0",
    "express": "^4.18.2",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "uuid": "^11.1.0",
    "ws": "^8.19.0"
  },
  "files": [
    "hook-notify.js",
    "config-tool.js",
    "install.js",
    "config.json",
    "i18n.json",
    "claude-hooks.json",
    "sounds/",
    "README.md",
    "QUICKSTART.md",
    "LICENSE"
  ],
  "devDependencies": {
    "jest": "^30.2.0"
  }
}
